<%= @tomcat_log %> {
    copytruncate
    daily
    rotate 7
    compress
    missingok
    create 0644 <%= @tomcat_user %> <%= @tomcat_user %>
}

<%= @application_dir %>/logs/access_log.txt {
    copytruncate
    daily
    rotate 7
    compress
    missingok
    create 0644 <%= @tomcat_user %> <%= @tomcat_user %>
}
